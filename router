        return outroutes

    def filter_relationships(self, srcif, routes):
        """ Don't allow Peer->Peer, Peer->Prov, or Prov->Peer forwards """
        outroutes = []
        return outroutes

    def get_route(self, srcif, daddr):
        """	Select the best route for a given address	"""
        # TODO
        peer = None
        routes = lookup_routers(daddr)
        # Rules go here
        if routes:
            # 1. Highest Preference
            routes = self.get_highest_preference(routes)
            # 2. Self Origin
            routes = self.get_self_origin(routes)
            # 3. Shortest ASPath
            routes = self.get_shortest_as_path(routes)
            # 4. EGP > IGP > UNK
            routes = self.get_origin_routes(routes)
            # 5. Lowest IP Address
            # TODO
            # Final check: enforce peering relationships
            routes = self.filter_relationships(srcif, routes)
        return self.sockets[peer] if peer else None

    def forward(self, srcif, packet):
        """	Forward a data packet	"""
        # {'type': 'data', 'src': '172.168.0.25', 'dst': '192.168.0.25'}
        if packet["dst"] not in self.route.values():
            self.send_no_route_message(srcif, packet)
        else:
            self.sockets[packet["dst"]].socket.send(packet.encode())

    def coalesce(self):
        """	coalesce any routes that are right next to each other	"""
        # TODO (this is the most difficult task, save until last)
        return False

    def update(self, srcif, packet):
        """	handle update packets	"""
        # save a copy of the announcement in case you need it later
        self.updates.append(packet)
        # add an entry to your forwarding table
        network = packet["network"]
        netmask = packet["netmask"]
        self.routes.append(
            {"network": network, "netmask": netmask, "peer": srcif})
        # send copies of the announcement to neighboring routers
        packet["src"] = packet["dst"]
        for sock in self.sockets:
            if not self.sockets[sock] == srcif:
                packet["dst"] = self.sockets[sock]
                self.sockets[sock].socket.send(packet.encode())
    #{'type': 'dump', 'src': '192.168.0.2', 'dst': '192.168.0.1', 'msg': {}}
    # 192.168.0.2

    def revoke(self, packet):
